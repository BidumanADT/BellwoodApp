<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="BellwoodGlobal.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:BellwoodGlobal.Mobile.Pages"
    Shell.BackgroundColor="{StaticResource BellwoodInk}"
    Shell.ForegroundColor="{StaticResource BellwoodCream}"
    Shell.TitleColor="{StaticResource BellwoodCream}"
    Shell.NavBarHasShadow="False"
    FlyoutBehavior="Disabled">

    <!-- Single visible ShellContent => no tabs UI -->
    <ShellContent
        Route="MainPage"
        ContentTemplate="{DataTemplate pages:MainPage}" />
</Shell>
