<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="BellwoodGlobal.Mobile.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Application.Resources>

        <!-- Bellwood Palette -->
        <Color x:Key="BellwoodCharcoal">#1A1A1A</Color>
        <Color x:Key="BellwoodGold">#CBA135</Color>
        <Color x:Key="BellwoodCream">#F5F1EB</Color>
        <Color x:Key="BellwoodInk">#0D1B2A</Color>

        <!-- Text sizes -->
        <x:Double x:Key="H1">28</x:Double>
        <x:Double x:Key="H2">22</x:Double>
        <x:Double x:Key="Body">16</x:Double>
        <x:Double x:Key="Small">13</x:Double>

        <!-- Base styles -->
        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource BellwoodCharcoal}" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BellwoodCream}" />
            <Setter Property="FontFamily" Value="Montserrat" />
            <Setter Property="FontSize" Value="{StaticResource Body}" />
        </Style>

        <!-- Gold CTA button -->
        <Style x:Key="GoldButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource BellwoodGold}" />
            <Setter Property="TextColor" Value="{StaticResource BellwoodCharcoal}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="HeightRequest" Value="52" />
            <Setter Property="FontFamily" Value="MontserratSemibold" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Padding" Value="18,10" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="#55000000" Opacity="0.6" Radius="10" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cream card container -->
        <Style x:Key="CardContainer" TargetType="Grid">
            <Setter Property="BackgroundColor" Value="{StaticResource BellwoodCream}" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="Margin" Value="0,10" />
            <Setter Property="CornerRadius" Value="18" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="#55000000" Opacity="0.4" Radius="8" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section header -->
        <Style x:Key="SectionTitle" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource BellwoodCream}" />
            <Setter Property="FontSize" Value="{StaticResource H2}" />
            <Setter Property="FontFamily" Value="Playfair" />
            <Setter Property="Margin" Value="0,10,0,6" />
        </Style>

        <!-- Small subtle label (meta) -->
        <Style x:Key="MutedLabel" TargetType="Label">
            <Setter Property="TextColor" Value="#CCFFFFFF" />
            <Setter Property="FontSize" Value="{StaticResource Small}" />
            <Setter Property="FontFamily" Value="Montserrat" />
        </Style>

        <!-- CollectionView card template -->
        <DataTemplate x:Key="RideItemTemplate">
            <Grid Style="{StaticResource CardContainer}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Watermark / Mark icon -->
                <Image
          Source="bellwood_mark_B_gold.png"
          Opacity="0.25"
          WidthRequest="32"
          HeightRequest="32"
          VerticalOptions="Center"
          Margin="2,0,14,0" />

                <VerticalStackLayout Grid.Column="1" Spacing="2">
                    <Label
            Text="{Binding Date, StringFormat='{}{0:MMM dd, yyyy}'}"
            TextColor="{StaticResource BellwoodCharcoal}"
            FontFamily="MontserratSemibold"
            FontSize="18" />

                    <Label
            Text="{Binding Distance, StringFormat='Distance: {0} mi'}"
            TextColor="{StaticResource BellwoodInk}"
            FontFamily="Montserrat"
            FontSize="14" />
                </VerticalStackLayout>
            </Grid>
        </DataTemplate>

    </Application.Resources>
</Application>
