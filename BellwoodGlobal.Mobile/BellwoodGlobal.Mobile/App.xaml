<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="BellwoodGlobal.Mobile.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Merge external dictionaries (order matters) -->
            <ResourceDictionary.MergedDictionaries>
                <!-- 1) Base neutrals -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <!-- 2) Bellwood brand colors + gradient -->
                <ResourceDictionary Source="Resources/Styles/Gradients.xaml" />
                <!-- 3) Global control styles (uses colors/gradients) -->
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Button | ink w/ gold text -->
            <Style x:Key="DarkHollowButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BellwoodInk}"/>
                <Setter Property="TextColor" Value="{StaticResource BellwoodGold}"/>
                <Setter Property="BorderColor" Value="{StaticResource BellwoodGold}"/>
                <Setter Property="BorderWidth" Value="1.5"/>
                <Setter Property="CornerRadius" Value="22"/>
                <Setter Property="HeightRequest" Value="48"/>
                <Setter Property="FontFamily" Value="MontserratSemibold"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="18,10"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#33000000" Opacity="0.4" Radius="10"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Keep ONLY resources that are NOT duplicated elsewhere -->

            <!-- Quote status chip colors -->
            <Color x:Key="ChipPending">#FFD166</Color>
            <Color x:Key="ChipPriced">#34D399</Color>
            <Color x:Key="ChipDeclined">#F87171</Color>
            <Color x:Key="ChipOther">#9AA3AF</Color>

            <!-- Text sizes -->
            <x:Double x:Key="H1">28</x:Double>
            <x:Double x:Key="H2">22</x:Double>
            <x:Double x:Key="Body">16</x:Double>
            <x:Double x:Key="Small">13</x:Double>

            <!-- Base styles -->
            <Style TargetType="ContentPage">
                <!-- Use BellwoodCharcoal from Gradients.xaml -->
                <Setter Property="BackgroundColor" Value="{StaticResource BellwoodCharcoal}" />
                <Setter Property="Padding" Value="0" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource White}" />
                <Setter Property="FontFamily" Value="Montserrat" />
                <Setter Property="FontSize" Value="{StaticResource Body}" />
            </Style>

            <!-- Gold CTA button -->
            <Style x:Key="GoldButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BellwoodGold}" />
                <Setter Property="TextColor" Value="{StaticResource BellwoodCharcoal}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="HeightRequest" Value="52" />
                <Setter Property="FontFamily" Value="MontserratSemibold" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Padding" Value="18,10" />
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#55000000" Opacity="0.6" Radius="10" />
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Cream card container -->
            <Style x:Key="CardContainer" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{StaticResource BellwoodCream}" />
                <Setter Property="Padding" Value="14" />
                <Setter Property="Margin" Value="0,10" />
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="18" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#55000000" Opacity="0.4" Radius="8" />
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Input wrapper -->
            <Style x:Key="InputBorder" TargetType="Border">
                <Setter Property="Stroke" Value="#E5E5E5"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="BackgroundColor" Value="{StaticResource BellwoodCream}"/>
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="12"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <!-- Entry styling -->
            <Style x:Key="CardInput" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
                <Setter Property="TextColor" Value="{StaticResource Black}"/>
                <Setter Property="PlaceholderColor" Value="#80757575"/>
                <Setter Property="FontFamily" Value="OpenSansRegular"/>
                <Setter Property="FontSize" Value="{StaticResource Body}"/>
                <Setter Property="HeightRequest" Value="48"/>
            </Style>

            <!-- Section header -->
            <Style x:Key="SectionTitle" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource White}" />
                <Setter Property="FontSize" Value="{StaticResource H2}" />
                <Setter Property="FontFamily" Value="Playfair" />
                <Setter Property="Margin" Value="0,10,0,6" />
            </Style>

            <!-- Subtle meta text -->
            <Style x:Key="MutedLabel" TargetType="Label">
                <Setter Property="TextColor" Value="#CCFFFFFF" />
                <Setter Property="FontSize" Value="{StaticResource Small}" />
                <Setter Property="FontFamily" Value="Montserrat" />
            </Style>

            <!-- Ride card template (unchanged) -->
            <DataTemplate x:Key="RideItemTemplate">
                <Grid Style="{StaticResource CardContainer}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Source="bellwood_mark_b_gold.png"
                           Opacity="0.25"
                           WidthRequest="32"
                           HeightRequest="32"
                           VerticalOptions="Center"
                           Margin="2,0,14,0" />

                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                        <Label Text="{Binding Date, StringFormat='{}{0:MMM dd, yyyy}'}"
                               TextColor="{StaticResource Black}"
                               FontFamily="MontserratSemibold"
                               FontSize="18" />
                        <Label Text="{Binding Distance, StringFormat='Distance: {0} mi'}"
                               TextColor="{StaticResource BellwoodInk}"
                               FontFamily="Montserrat"
                               FontSize="14" />
                    </VerticalStackLayout>
                </Grid>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
