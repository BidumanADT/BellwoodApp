<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BellwoodGlobal.Mobile.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource BellwoodInk}"
    Title="Bellwood">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*,Auto" Padding="24">
        <VerticalStackLayout Spacing="8" Margin="0,36,0,16">
            <Label Text="Bellwood" TextColor="{StaticResource BellwoodGold}" FontSize="{StaticResource H1}" FontAttributes="Bold" />
            <Label Text="Executive Car Service" TextColor="{StaticResource BellwoodCream}" FontSize="{StaticResource Body}" />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1" Spacing="16" VerticalOptions="Center">
            <Button Text="Get a Quote"
                    FontSize="{StaticResource H2}"
                    TextColor="{StaticResource BellwoodInk}"
                    BackgroundColor="{StaticResource BellwoodGold}"
                    CornerRadius="14" HeightRequest="56"
                    Clicked="OnGetQuote" />

            <Button Text="Ride History"
                    FontSize="{StaticResource H2}"
                    TextColor="{StaticResource BellwoodCream}"
                    BackgroundColor="{StaticResource BellwoodCharcoal}"
                    BorderColor="{StaticResource BellwoodGold}" BorderWidth="1"
                    CornerRadius="14" HeightRequest="56"
                    Clicked="OnRideHistory" />
        </VerticalStackLayout>

        <Label Grid.Row="2" Margin="0,24,0,12"
               Text="BE the Bellwood Difference"
               HorizontalTextAlignment="Center"
               TextColor="{StaticResource BellwoodCream}" Opacity="0.7" />
    </Grid>
</ContentPage>
