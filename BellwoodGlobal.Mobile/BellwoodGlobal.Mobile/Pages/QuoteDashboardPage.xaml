<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BellwoodGlobal.Mobile.Pages.QuoteDashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource BellwoodInk}"
    Title="Quote Dashboard">

	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Back" Priority="0" Order="Primary" Clicked="OnBackClicked" />
	</ContentPage.ToolbarItems>

	<Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="10">
		<!-- Filter buttons -->
		<HorizontalStackLayout Grid.Row="0" Spacing="8">
			<Button x:Name="AllBtn" Text="All" Clicked="OnFilterClicked" />
			<Button x:Name="PendingBtn" Text="Pending" Clicked="OnFilterClicked" />
			<Button x:Name="PricedBtn" Text="Priced" Clicked="OnFilterClicked" />
			<Button x:Name="DeclinedBtn" Text="Declined" Clicked="OnFilterClicked" />
		</HorizontalStackLayout>

		<!-- Search -->
		<Grid Grid.Row="1" ColumnDefinitions="Auto,*" ColumnSpacing="8">
			<Label Text="Search" VerticalOptions="Center" TextColor="{StaticResource BellwoodCream}" />
			<Entry Grid.Column="1"
                   x:Name="SearchEntry"
                   Placeholder="ID, passenger, or pickup…"
                   TextColor="{StaticResource BellwoodCream}"
                   BackgroundColor="{StaticResource BellwoodCharcoal}"
                   TextChanged="OnSearchChanged"/>
		</Grid>

		<!-- List -->
		<RefreshView Grid.Row="2" x:Name="Refresh" Refreshing="OnRefresh">
			<CollectionView x:Name="List"
                            SelectionMode="Single"
                            SelectionChanged="OnSelectionChanged"
                            ItemsLayout="VerticalList">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Grid Padding="12" Margin="0,6"
                              BackgroundColor="{StaticResource BellwoodCharcoal}"
                              ColumnDefinitions="*,Auto"
                              RowDefinitions="Auto,Auto,Auto">
							<!-- Title (Passenger · Vehicle) -->
							<Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Title}"
                                   TextColor="{StaticResource BellwoodCream}"
                                   FontAttributes="Bold" />
							<!-- Status chip -->
							<Frame Grid.Row="0" Grid.Column="1"
                                   Padding="8,4" CornerRadius="10" HasShadow="False"
                                   BackgroundColor="{Binding StatusColor}">
								<Label Text="{Binding Status}"
                                       TextColor="{StaticResource BellwoodInk}"
                                       FontAttributes="Bold" />
							</Frame>

							<!-- SubTitle (pickup dt + location) -->
							<Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding SubTitle}"
                                   TextColor="{StaticResource BellwoodCream}"
                                   Opacity="0.9" FontSize="12"/>

							<!-- Meta (booker • drop • created) -->
							<Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding Meta}"
                                   TextColor="{StaticResource BellwoodCream}"
                                   Opacity="0.7" FontSize="12"/>
						</Grid>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</RefreshView>
	</Grid>
</ContentPage>
