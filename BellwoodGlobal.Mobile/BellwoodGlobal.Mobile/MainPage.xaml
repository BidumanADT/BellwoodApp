<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="BellwoodGlobal.Mobile.MainPage"
             Title="My Rides">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login & Load Rides"
            Clicked="OnLoginClicked" />

        <CollectionView x:Name="RidesList" IsVisible="False">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10">
                        <VerticalStackLayout>
                            <Label Text="{Binding Date}" 
                     FontAttributes="Bold" />
                            <Label Text="{Binding Distance, StringFormat='Distance: {0:F1} km'}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>
