<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BellwoodGlobal.Mobile.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Bellwood">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- HERO -->
        <Grid Row="0" Padding="24,28,24,18">
            <Grid BackgroundColor="{StaticResource BellwoodCharcoal}">
                <Grid>
                    <!-- Subtle gradient overlay (optional) -->
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#00000000" Offset="0.0" />
                            <GradientStop Color="#22000000" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>

                    <VerticalStackLayout Spacing="12">
                        <Image
              Source="bellwood_logo.png"
              HeightRequest="32"
              HorizontalOptions="Start" />

                        <Label
              Text="Your Rides"
              FontFamily="Playfair"
              FontSize="{StaticResource H1}"
              TextColor="{StaticResource BellwoodCream}" />

                        <Label
              x:Name="ErrorLabel"
              Text=""
              Style="{StaticResource MutedLabel}"
              TextColor="#FF6B6B"
              IsVisible="False" />
                    </VerticalStackLayout>
                </Grid>
            </Grid>
        </Grid>

        <!-- CONTENT: Rides list card -->
        <Grid Row="1" Padding="24,0,24,0">
            <Border Style="{StaticResource CardContainer}">
                <CollectionView
            x:Name="RidesList"
            IsVisible="False"
            ItemsSource="{x:Null}"
            ItemTemplate="{StaticResource RideItemTemplate}" />
            </Border>
        </Grid>
        
        <!-- CTA FOOTER -->
        <Grid Row="2" Padding="24,18,24,28">
            <Button
              x:Name="RefreshButton"
              Text="Refresh rides"
              Style="{StaticResource GoldButton}"
              Clicked="OnRefreshClicked" /> 
        </Grid>

    </Grid>
</ContentPage>
