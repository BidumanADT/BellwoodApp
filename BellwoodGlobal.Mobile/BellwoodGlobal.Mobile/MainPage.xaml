<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BellwoodGlobal.Mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout
                Padding="30"
                Spacing="20">

                        <!-- Login and Load Rides Button -->
            <Button
                    x:Name="LoginButton"
                    Text="Log In and Load Rides"
                    Clicked="OnLoginClicked" />

            <!-- Label to display the JSON or any errors -->
                <Label
                    x:Name="ResultLabel"
                    LineBreakMode="WordWrap"
                    Text="Press the button to load rides." />
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
